@using Entities.DTOs
@model UserForRegisterDto
@{
    ViewData["Title"] = "Register";
}


<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
    </div>
</div>

<div class="row">
    <div class="col-4 offset-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
                <div class="form-group mb-3">
                <label asp-for="FirstName" class="form-label">First Name</label>
                <input asp-for="FirstName" type="password" class="form-control" placeholder="firstname" />
                <span asp-validation-for="FirstName" class="text-danger small"></span>
            </div>
              <div class="form-group mb-3">
                <label asp-for="LastName" class="form-label">Last Name</label>
                <input asp-for="LastName" type="password" class="form-control" placeholder="lastName" />
                <span asp-validation-for="LastName" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RePassword" class="form-label">Re-Password</label>
                <input asp-for="RePassword" type="password" class="form-control" placeholder="password" />
                <span asp-validation-for="RePassword" class="text-danger small"></span>
            </div>
          
            
            <div class="form-group d-grid mb-3">
                <button type="submit" class="btn btn-primary d-block">Register</button>
            </div>
        </form>
    </div>
</div>
